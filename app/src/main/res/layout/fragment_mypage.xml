<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.MypageFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="659dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/resName"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:text="마이페이지"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/textLine"
                app:layout_constraintStart_toStartOf="@+id/textLine"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textLine"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#EEEEEE"
                app:layout_constraintTop_toBottomOf="@+id/resName" />


            <ImageView
                android:id="@+id/profileimg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                tools:src="@tools:sample/avatars"
                android:scaleType="centerInside"/>

            <TextView
                android:id="@+id/nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:gravity="center"/>

            <RatingBar
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:numStars="5"
                android:rating="0.5"
                android:stepSize="0.5"
                android:isIndicator="true"
                android:progressTint="@color/main"/>

            <Button
                android:id="@+id/change_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="닉네임/프로필 이미지 변경" />

            <Button
                android:id="@+id/block"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="차단관리" />

            <Button
                android:id="@+id/restarurantlog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="먹었던정보" />

            <Button
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="로그아웃" />

            <Button
                android:id="@+id/delete_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="회원탈퇴" />

        </LinearLayout>


    </RelativeLayout>
</FrameLayout>