<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.fragment.MypageFragment"
    android:id="@+id/mypagecontainer">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="659dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/resName"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:text="마이페이지"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:layout_constraintBottom_toTopOf="@+id/textLine"
                app:layout_constraintStart_toStartOf="@+id/textLine"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textLine"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#EEEEEE"
                app:layout_constraintTop_toBottomOf="@+id/resName" />


            <ImageView
                android:id="@+id/profileimg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                tools:src="@tools:sample/avatars"
                android:scaleType="centerInside"/>

            <TextView
                android:id="@+id/nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:gravity="center"/>

            <RatingBar
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:progressTint="@color/main"
                android:layout_gravity="center"
                android:numStars="5"
                android:stepSize="0.5"
                android:rating="1.5"
                android:isIndicator="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/hashtageimage1"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/friend" />

                    <TextView
                        android:id="@+id/talkcount"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="100" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/hashtagechip1"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:text="대화가 많아요"
                        android:textAlignment="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/hashtageimage2"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/friend" />

                    <TextView
                        android:id="@+id/kindcount"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="100" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/hashtagechip2"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:text="친절해요"
                        android:textAlignment="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/hashtageimage3"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/friend" />

                    <TextView
                        android:id="@+id/mannercount"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="100" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/hashtagechip3"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:text="예절이 좋아요"
                        android:textAlignment="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/hashtageimage4"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:src="@drawable/friend"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/quietcount"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="100" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/hashtagechip4"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:text="조용해요"
                        android:textAlignment="center"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/change_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="닉네임/프로필 이미지 변경"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/drawable_change_icon"
                    android:gravity="left|center_vertical"/>

                <Button
                    android:id="@+id/block"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="차단관리"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/drawable_ban_icon"
                    android:gravity="left|center_vertical"/>

                <Button
                    android:id="@+id/restarurantlog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="먹었던정보"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/drawable_history_icon"
                    android:gravity="left|center_vertical"/>

                <Button
                    android:id="@+id/delete_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:text="회원탈퇴"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/drawable_delete_icon"
                    android:gravity="left|center_vertical"/>

                <Button
                    android:id="@+id/logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:text="로그아웃"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/drawable_logout_icon"
                    android:gravity="left|center_vertical"/>
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
</FrameLayout>